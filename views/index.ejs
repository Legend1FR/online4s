<%- include('headerpatient') %>
<!DOCTYPE html>
<html lang="ar" dir="rtl">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        /* Reset & Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Tajawal', sans-serif;
        }
        
        body {
            background-color: #f8fafc;
            color: #1e293b;
            line-height: 1.6;
        }
        
        /* Header Styles */
        .header {
            background: linear-gradient(135deg, #3b82f6, #1d4ed8);
            color: white;
            padding: 1.5rem 0;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        
        .header-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .logo {
            font-size: 1.8rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .logo i {
            color: #93c5fd;
        }
        
        /* Navigation */
        .nav-menu {
            display: flex;
            gap: 1.5rem;
        }
        
        .nav-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .nav-item i {
            font-size: 1.2rem;
            margin-bottom: 0.3rem;
        }
        
        .nav-item:hover {
            transform: translateY(-3px);
            opacity: 0.9;
        }
        
        /* Hero Section */
        .hero {
            background: linear-gradient(rgba(30, 41, 59, 0.85), rgba(30, 41, 59, 0.85)), 
                        url('/images/medical-bg.jpg') center/cover;
            height: 60vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            padding: 0 1rem;
        }
        
        .hero-content {
            max-width: 800px;
        }
        
        .hero h1 {
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }
        
        .hero p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }
        
        .btn {
            display: inline-block;
            padding: 0.8rem 2rem;
            border-radius: 0.375rem;
            font-weight: 600;
            transition: all 0.3s;
            text-decoration: none;
        }
        
        .btn-primary {
            background-color: #f59e0b;
            color: #1e293b;
        }
        
        .btn-primary:hover {
            background-color: #fbbf24;
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        
        /* Doctors Section */
        .doctors-section {
            padding: 4rem 1rem;
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .section-title {
            text-align: center;
            margin-bottom: 3rem;
            position: relative;
        }
        
        .section-title h2 {
            font-size: 2rem;
            color: #1e293b;
            display: inline-block;
            padding-bottom: 0.5rem;
        }
        
        .section-title h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background-color: #3b82f6;
        }
        
        /* Doctors Grid */
        .doctors-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
        }
        
        .doctor-card {
            background: white;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
        }
        
        .doctor-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        
        .doctor-img-container {
            height: 250px;
            overflow: hidden;
            position: relative;
        }
        
        .doctor-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s;
        }
        
        .doctor-card:hover .doctor-img {
            transform: scale(1.05);
        }
        
        .doctor-info {
            padding: 1.5rem;
            text-align: center;
        }
        
        .doctor-name {
            font-size: 1.3rem;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }
        
        .doctor-specialty {
            color: #64748b;
            margin-bottom: 1rem;
            font-size: 0.95rem;
        }
        
        .btn-book {
            background-color: #3b82f6;
            color: white;
            padding: 0.6rem 1.5rem;
            border-radius: 0.375rem;
            font-weight: 500;
            transition: all 0.3s;
            display: inline-block;
        }
        
        .btn-book:hover {
            background-color: #2563eb;
        }
        
        /* Features Section */
        .features {
            background-color: #f1f5f9;
            padding: 4rem 1rem;
        }
        
        .features-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }
        
        .feature-card {
            background: white;
            padding: 2rem;
            border-radius: 0.5rem;
            text-align: center;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
        }
        
        .feature-card:hover {
            transform: translateY(-5px);
        }
        
        .feature-icon {
            font-size: 2.5rem;
            color: #3b82f6;
            margin-bottom: 1.5rem;
        }
        
        .feature-title {
            font-size: 1.2rem;
            color: #1e293b;
            margin-bottom: 1rem;
        }
        
        /* Footer */
        .footer {
            background-color: #1e293b;
            color: #e2e8f0;
            padding: 3rem 1rem;
            text-align: center;
        }
        
        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .footer-links {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-bottom: 2rem;
        }
        
        .footer-link {
            color: #93c5fd;
            text-decoration: none;
            transition: all 0.3s;
        }
        
        .footer-link:hover {
            color: #3b82f6;
        }
        
        .copyright {
            margin-top: 2rem;
            color: #94a3b8;
            font-size: 0.9rem;
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .header-container {
                flex-direction: column;
                gap: 1rem;
            }
            
            .nav-menu {
                width: 100%;
                justify-content: space-around;
            }
            
            .hero h1 {
                font-size: 2rem;
            }
            
            .hero p {
                font-size: 1rem;
            }
            
            .doctors-grid {
                grid-template-columns: 1fr;
            }
        }
        
        /* Loading & Error States */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.9);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            flex-direction: column;
        }
        
        .spinner {
            font-size: 3rem;
            color: #3b82f6;
            animation: spin 1s linear infinite;
            margin-bottom: 1rem;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .error-message {
            background-color: #fee2e2;
            color: #b91c1c;
            padding: 1rem;
            border-radius: 0.375rem;
            margin: 1rem auto;
            max-width: 800px;
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        
        .error-icon {
            font-size: 1.5rem;
        }
        
        .empty-state {
            text-align: center;
            padding: 2rem;
            color: #64748b;
        }
    </style>


    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>رعاية طبية متكاملة في أي وقت ومن أي مكان</h1>
            <p>تواصل مع أفضل الأطباء المتخصصين واحصل على الاستشارات الطبية بكل سهولة ويسر</p>
            <% if (patient) { %>
                <a href="/request-session" class="btn btn-primary">احجز موعد الآن</a>
            <% } else { %>
                <a href="/signUp" class="btn btn-primary">انضم إلينا الآن</a>
            <% } %>
        </div>
    </section>

    <!-- Main Content -->
    <main>
        <!-- Loading Indicator -->
        <div class="loading-overlay" id="loadingIndicator">
            <i class="fas fa-spinner spinner"></i>
            <p>جاري تحميل البيانات...</p>
        </div>

        <!-- Error Message -->
        <% if (error) { %>
            <div class="error-message">
                <i class="fas fa-exclamation-circle error-icon"></i>
                <div>
                    <h3><%= error.title || 'حدث خطأ' %></h3>
                    <p><%= error.message || 'حدث خطأ أثناء جلب بيانات الأطباء' %></p>
                </div>
            </div>
        <% } %>

        <!-- Doctors Section -->
        <section class="doctors-section">
            <div class="section-title">
                <h2>أطباؤنا المتخصصون</h2>
            </div>

            <% if (doctors && doctors.length > 0) { %>
                <div class="doctors-grid">
                    <% doctors.forEach(doctor => { %>
                        <div class="doctor-card">
                            <div class="doctor-img-container">
                                <img src="<%= doctor.profileImage || '/images/default-doctor.jpg' %>" alt="<%= doctor.username %>" class="doctor-img">
                            </div>
                            <div class="doctor-info">
                                <h3 class="doctor-name"><%= doctor.username %></h3>
                                <p class="doctor-specialty"><%= doctor.specialization %></p>
                                <% if (patient) { %>
                                    <a href="/request-session?doctor=<%= doctor._id %>" class="btn-book">حجز موعد</a>
                                <% } else { %>
                                    <a href="/signUp" class="btn-book">سجل للبدء</a>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else if (!error) { %>
                <div class="empty-state">
                    <i class="fas fa-user-md" style="font-size: 3rem; color: #94a3b8; margin-bottom: 1rem;"></i>
                    <h3>لا يوجد أطباء متاحين حالياً</h3>
                    <p>سنقوم بإضافة أطباء جدد قريباً</p>
                </div>
            <% } %>
        </section>

        <!-- Features Section -->
        <section class="features">
            <div class="features-container">
                <div class="section-title">
                    <h2>لماذا تختار عيادتي؟</h2>
                </div>
                <div class="features-grid">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h3 class="feature-title">مواعيد مرنة</h3>
                        <p>احجز في الوقت الذي يناسبك مع أفضل الأطباء</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-stethoscope"></i>
                        </div>
                        <h3 class="feature-title">أطباء متخصصون</h3>
                        <p>طاقم طبي مؤهل وذو خبرة عالية</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-headset"></i>
                        </div>
                        <h3 class="feature-title">دعم فني</h3>
                        <p>متاح على مدار الساعة لمساعدتك</p>
                    </div>
                </div>
            </div>
        </section>
    </main>


    <script>
        // Hide loading indicator when page is fully loaded
        window.addEventListener('load', function() {
            setTimeout(function() {
                document.getElementById('loadingIndicator').style.opacity = '0';
                setTimeout(function() {
                    document.getElementById('loadingIndicator').style.display = 'none';
                }, 500);
            }, 1000);
        });

        // Socket.io initialization for real-time updates
        document.addEventListener('DOMContentLoaded', function() {
            const token = document.cookie.split('; ').find(row => row.startsWith('token='));
            if (token) {
                try {
                    const payload = JSON.parse(atob(token.split('.')[1]));
                    const patientId = payload._id;
                    const socket = io();
                    
                    socket.emit('patientLogin', patientId);
                    
                    socket.on('doctorAvailabilityUpdate', (data) => {
                        // Handle real-time updates about doctor availability
                        console.log('Doctor availability update:', data);
                        // You could implement UI updates here
                    });
                    
                    window.addEventListener('beforeunload', () => {
                        socket.emit('patientLogout', patientId);
                    });
                } catch (error) {
                    console.error('Socket initialization error:', error);
                }
            }
        });
    </script>
</body>
</html>
<%- include('footerpatient') %>