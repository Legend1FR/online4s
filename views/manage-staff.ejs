<!-- node-project\views\manage-staff.ejs file -->

<%- include('headeradmin', { admin: admin }) %>

<div class="content" style="width: 600px; margin: 40px auto; background-color: #e6e6e6; padding: 20px; border-radius: 8px; text-align: center;"> 
    <h2 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #333; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);">إدارة الموظفين والأطباء</h2> 
     
    <% if (typeof error !== 'undefined' && error) { %>  
        <p style="color: red; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"><%= error %></p>  
    <% } %>  
      
    <% if (typeof success !== 'undefined' && success) { %>  
        <p style="color: green; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"><%= success %></p>  
    <% } %> 
 
    <form action="/admin/add-staff" method="post" style="margin-top: 20px;"> 
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"> 
         
        <label for="role" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 16px; color: #555;">الدور:</label> 
        <select name="role" id="role" required style="padding: 8px; border-radius: 4px; border: 1px solid #ccc; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 14px;"> 
            <option value="doctor">طبيب</option> 
            <option value="receptionist">موظف استقبال</option> 
        </select><br><br> 
 
        <label for="username" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 16px; color: #555;">اسم المستخدم:</label> 
        <input type="text" name="username" id="username" required style="padding: 8px; border-radius: 4px; border: 1px solid #ccc; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 14px;"><br><br> 
 
        <label for="password" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 16px; color: #555;">كلمة المرور:</label> 
        <input type="password" name="password" id="password" required style="padding: 8px; border-radius: 4px; border: 1px solid #ccc; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 14px;"><br><br> 
 
        <label for="specialization" id="specializationLabel" style="display: none; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 16px; color: #555;">التخصص:</label> 
        <input type="text" name="specialization" id="specialization" style="display: none; padding: 8px; border-radius: 4px; border: 1px solid #ccc; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 14px;"><br><br> 
 

        <label for="email" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 16px; color: #555;">البريد الإلكتروني:</label>
        <input type="email" name="email" id="email" required style="padding: 8px; border-radius: 4px; border: 1px solid #ccc; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 14px;"><br><br>

        <button type="submit" style="padding: 10px 20px; background-color: #007BFF; color: white; border: none; border-radius: 4px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 16px; cursor: pointer; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">تسجيل</button> 
    </form> 
</div> 
 
<script> 
    document.getElementById('role').addEventListener('change', function() { 
        const specializationLabel = document.getElementById('specializationLabel'); 
        const specializationInput = document.getElementById('specialization'); 
         
        if (this.value === 'doctor') { 
            specializationLabel.style.display = 'inline'; 
            specializationInput.style.display = 'inline'; 
            specializationInput.required = true; 
        } else { 
            specializationLabel.style.display = 'none'; 
            specializationInput.style.display = 'none'; 
            specializationInput.required = false; 
        } 
    }); 
</script> 
 
<%- include('footeradmin') %>