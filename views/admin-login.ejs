
<%- include('header', { title: 'تسجيل دخول الأدمن' }) %>
<div class="content" style="width: 500px; margin: 50px auto; background-color: #fff; padding: 30px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1); text-align: center;">
    <h2 style="margin-bottom: 20px;">تسجيل دخول الأدمن</h2>
    <form action="/admin/login" method="post" onsubmit="return validateLoginForm()">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="text" name="username" placeholder="اسم المستخدم" dir="rtl" style="width: 100%; padding: 10px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px;" required>
        <input type="password" name="password" placeholder="كلمة المرور" dir="rtl" style="width: 100%; padding: 10px; margin: 10px 0; border: 1px solid #ccc; border-radius: 5px;" required>
        
        
        <button type="submit" id="submitButton" style="width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer;">تسجيل الدخول</button>
        <div id="loadingSpinner" style="display: none; margin-top: 10px;">جاري التحميل...</div>
    </form>
    <% if (error) { %>
        <p style="color: red; margin-top: 10px;"><%= error %></p>
    <% } %>
</div>

<script>
    function validateLoginForm() {
        const username = document.querySelector('input[name="username"]').value;
        const password = document.querySelector('input[name="password"]').value;
        if (!username || !password) {
            alert("اسم المستخدم وكلمة المرور مطلوبان");
            return false;
        }
        document.getElementById('submitButton').style.display = 'none';
        document.getElementById('loadingSpinner').style.display = 'block';
        return true;
    }
</script>
<%- include('footer') %>


