<!-- views/update-password.ejs -->
<%- include('header', { title: 'تحديث كلمة المرور' }) %>
<div class="auth-container">
    <div class="auth-card">
        <h2>
            <i class="fas fa-key"></i>
            تحديث كلمة المرور
        </h2>
        
        <form action="/update-password/<%= patientId %>" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="form-group">
                <i class="fas fa-lock input-icon"></i>
                <input type="password" name="newPassword" id="newPassword" placeholder="كلمة المرور الجديدة" required
                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                    title="يجب أن تحتوي على الأقل على 8 أحرف، حرف كبير وحرف صغير ورقم">
                <div class="password-strength">
                    <span class="strength-requirement" data-requirement="length"><i class="fas fa-times"></i> 8 أحرف على الأقل</span>
                    <span class="strength-requirement" data-requirement="lower"><i class="fas fa-times"></i> حرف صغير</span>
                    <span class="strength-requirement" data-requirement="upper"><i class="fas fa-times"></i> حرف كبير</span>
                    <span class="strength-requirement" data-requirement="number"><i class="fas fa-times"></i> رقم</span>
                </div>
            </div>
            
            <button type="submit" class="submit-btn">
                <span id="submitText">تحديث كلمة المرور</span>
                <div id="loadingSpinner" class="spinner" style="display: none;">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>
            </button>
        </form>
        
        <% if (error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <%= error %>
            </div>
        <% } %>
    </div>
</div>

<style>
    /* Reset & Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Tajawal', sans-serif;
    }
    body {
        background-color: #f8fafc;
        color: #1e293b;
        line-height: 1.6;
    }
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px);
        padding: 20px;
        background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    }
    .auth-card {
        width: 100%;
        max-width: 420px;
        background-color: #fff;
        padding: 2.5rem 2rem 2rem 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 16px rgba(59,130,246,0.08);
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .auth-card h2 {
        margin-bottom: 1.5rem;
        color: #1e293b;
        font-weight: 700;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.7rem;
    }
    .auth-card h2 i {
        color: #3b82f6;
        font-size: 2rem;
    }
    form {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }
    .form-group {
        width: 100%;
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        align-items: flex-end;
    }
    .input-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #3b82f6;
        font-size: 1.1rem;
        pointer-events: none;
    }
    input[type="password"] {
        width: 100%;
        border: 1px solid #cbd5e1;
        border-radius: 0.5rem;
        padding: 0.8rem 2.5rem 0.8rem 1rem;
        font-size: 1.1rem;
        background: #f1f5f9;
        color: #1e293b;
        outline: none;
        transition: border-color 0.2s;
        direction: ltr;
        text-align: left;
    }
    input[type="password"]:focus {
        border-color: #3b82f6;
        background: #fff;
    }
    .password-strength {
        width: 100%;
        text-align: right;
        margin-top: 8px;
        font-size: 0.95rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem 1.2rem;
    }
    .strength-requirement {
        display: flex;
        align-items: center;
        color: #e74c3c;
        font-size: 0.97rem;
        gap: 0.3rem;
        transition: color 0.2s;
    }
    .strength-requirement.valid {
        color: #16a34a;
    }
    .strength-requirement i {
        font-size: 1.1rem;
    }
    .submit-btn {
        background: linear-gradient(90deg, #3b82f6 60%, #1d4ed8 100%);
        color: #fff;
        border: none;
        border-radius: 0.5rem;
        padding: 0.9rem 0;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: background 0.2s, box-shadow 0.2s;
        box-shadow: 0 2px 8px rgba(59,130,246,0.08);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.7rem;
        position: relative;
    }
    .submit-btn:focus,
    .submit-btn:hover {
        background: linear-gradient(90deg, #2563eb 60%, #1d4ed8 100%);
    }
    .spinner {
        font-size: 1.3rem;
        color: #fff;
        margin-right: 0.5rem;
        display: inline-flex;
        align-items: center;
    }
    .alert {
        width: 100%;
        margin: 1rem 0 0 0;
        padding: 1rem;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.7rem;
        font-size: 1rem;
    }
    .alert-error {
        background: #fee2e2;
        color: #b91c1c;
        border: 1px solid #fecaca;
    }
    .alert-success {
        background: #dcfce7;
        color: #166534;
        border: 1px solid #bbf7d0;
    }
    .alert i {
        font-size: 1.3rem;
    }
    @media (max-width: 600px) {
        .auth-container {
            padding: 1.5rem 0.7rem 1.2rem 0.7rem;
        }
        .auth-card {
            max-width: 98vw;
            padding: 1.5rem 0.7rem 1.2rem 0.7rem;
        }
        .auth-card h2 {
            font-size: 1.1rem;
        }
        .auth-card h2 i {
            font-size: 1.5rem;
        }
        .submit-btn {
            font-size: 1rem;
        }
    }
</style>

<script>
    document.getElementById('newPassword').addEventListener('input', function(e) {
        const value = e.target.value;
        const requirements = {
            length: value.length >= 8,
            lower: /[a-z]/.test(value),
            upper: /[A-Z]/.test(value),
            number: /\d/.test(value)
        };
        
        Object.keys(requirements).forEach(key => {
            const element = document.querySelector(`[data-requirement="${key}"]`);
            if (requirements[key]) {
                element.classList.add('valid');
                element.innerHTML = `<i class="fas fa-check"></i> ${element.textContent.replace('✖', '')}`;
            } else {
                element.classList.remove('valid');
                element.innerHTML = `<i class="fas fa-times"></i> ${element.textContent.replace('✓', '')}`;
            }
        });
    });
</script>

<%- include('footer') %>