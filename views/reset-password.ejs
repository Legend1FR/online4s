<%- include('header', { title: 'إعادة تعيين كلمة المرور' }) %>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Tajawal', sans-serif;
    }
    body {
        background-color: #f8fafc;
        color: #1e293b;
        line-height: 1.6;
    }
    .reset-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px);
        padding: 20px;
        background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    }
    .reset-card {
        width: 100%;
        max-width: 420px;
        background-color: #fff;
        padding: 2.5rem 2rem 2rem 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 16px rgba(59,130,246,0.08);
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .reset-card h2 {
        margin-bottom: 1.5rem;
        color: #1e293b;
        font-weight: 700;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.7rem;
    }
    .reset-card h2 i {
        color: #3b82f6;
        font-size: 2rem;
    }
    .reset-form {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }
    .form-group {
        width: 100%;
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        align-items: flex-end;
    }
    .input-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #3b82f6;
        font-size: 1.1rem;
        pointer-events: none;
    }
    input[type="email"] {
        width: 100%;
        border: 1px solid #cbd5e1;
        border-radius: 0.5rem;
        padding: 0.8rem 2.5rem 0.8rem 1rem;
        font-size: 1.1rem;
        background: #f1f5f9;
        color: #1e293b;
        outline: none;
        transition: border-color 0.2s;
        direction: rtl;
        text-align: right;
    }
    input[type="email"]:focus {
        border-color: #3b82f6;
        background: #fff;
    }
    .submit-btn {
        background: linear-gradient(90deg, #3b82f6 60%, #1d4ed8 100%);
        color: #fff;
        border: none;
        border-radius: 0.5rem;
        padding: 0.9rem 0;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: background 0.2s, box-shadow 0.2s;
        box-shadow: 0 2px 8px rgba(59,130,246,0.08);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.7rem;
        position: relative;
    }
    .submit-btn:focus,
    .submit-btn:hover {
        background: linear-gradient(90deg, #2563eb 60%, #1d4ed8 100%);
    }
    .alert {
        width: 100%;
        margin: 1rem 0 0 0;
        padding: 1rem;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.7rem;
        font-size: 1rem;
        justify-content: flex-start;
    }
    .alert-error {
        background: #fee2e2;
        color: #b91c1c;
        border: 1px solid #fecaca;
    }
    .alert-success {
        background: #dcfce7;
        color: #166534;
        border: 1px solid #bbf7d0;
    }
    .alert i {
        font-size: 1.3rem;
    }
    @media (max-width: 600px) {
        .reset-container {
            padding: 1.5rem 0.7rem 1.2rem 0.7rem;
        }
        .reset-card {
            max-width: 98vw;
            padding: 1.5rem 0.7rem 1.2rem 0.7rem;
        }
        .reset-card h2 {
            font-size: 1.1rem;
        }
        .reset-card h2 i {
            font-size: 1.5rem;
        }
        .submit-btn {
            font-size: 1rem;
        }
    }
</style>
<div class="reset-container">
    <div class="reset-card">
        <h2>إعادة تعيين كلمة المرور</h2>
        <form class="reset-form" action="/reset-password" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
                <input type="email" placeholder="البريد الإلكتروني" name="email">
            </div>
            <button type="submit" class="submit-btn">إرسال</button>
        </form>
        <% if (error) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
        <% } %>
        <% if (success) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>
    </div>
</div>
<%- include('footer') %>




