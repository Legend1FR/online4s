</head>
<body>
    <div class="header">
        <div class="header-container">
            <div class="logo">
               
                <span class="menu-icon" onclick="toggleSidebar()">&#9776;</span>
            </div>
            <div class="header-left">
                
                
            </div>
            <div class="logo">
                <i class="fas fa-heartbeat"></i>
                <span>عيادتي</span>
            </div>
        </div>
    </div>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <i class="fas fa-user-md"></i>
            <span><%= doctor.username %> - <%= doctor.specialization %></span>
        </div>
        <a href="/doctor/sessions"><i class="fas fa-calendar-alt" style="margin-left:8px"></i>الجلسات</a>
        <a href="/doctor/appointments"><i class="fas fa-clock" style="margin-left:8px"></i>المواعيد</a>
        <a href="/doctor/medical-record"><i class="fas fa-notes-medical" style="margin-left:8px"></i>السجل الطبي</a>
        <a href="/doctor/follow-up"><i class="fas fa-history" style="margin-left:8px"></i>مراجعات المرضى</a>
        <a href="/doctor/logout"><i class="fas fa-sign-out-alt" style="margin-left:8px"></i>تسجيل خروج</a>
    </div>
    <div class="page-content">
        <!-- ... محتوى الصفحة هنا ... -->
    </div>
    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById("sidebar");
            if (sidebar.style.left === "-250px" || sidebar.style.left === "" || sidebar.style.left === "-100vw") {
                sidebar.style.left = "0";
            } else {
                sidebar.style.left = window.innerWidth <= 600 ? "-100vw" : "-250px";
            }
        }
        // إغلاق القائمة الجانبية عند الضغط خارجها على الشاشات الصغيرة
        document.addEventListener('click', function(event) {
            var sidebar = document.getElementById("sidebar");
            var menuIcon = document.querySelector('.menu-icon');
            if (window.innerWidth <= 900 && sidebar.style.left === "0") {
                if (!sidebar.contains(event.target) && !menuIcon.contains(event.target)) {
                    sidebar.style.left = window.innerWidth <= 600 ? "-100vw" : "-250px";
                }
            }
        });
    </script>
</body>
