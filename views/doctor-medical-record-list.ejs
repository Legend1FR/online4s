<%- include('headerdoc') %>
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <title>سجلات المرضى</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100 font-sans">
  <div class="container mx-auto p-6">
    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">سجلات المرضى</h2>
      <table class="min-w-full bg-white">
        <thead>
          <tr>
            <th class="py-2 px-4 border-b">المريض</th>
            <th class="py-2 px-4 border-b">تاريخ الجلسة</th>
            <th class="py-2 px-4 border-b">التشخيص</th>
            <th class="py-2 px-4 border-b">الوصفة</th>
            <th class="py-2 px-4 border-b">التوصيات الغذائية</th>
            <th class="py-2 px-4 border-b">الملاحظات</th>
            <th class="py-2 px-4 border-b">مدة المراجعة</th>
            <th class="py-2 px-4 border-b">إجراء</th>
          </tr>
        </thead>
        <tbody>
          <% appointments.forEach(function(appointment) { %>
            <tr>
              <td class="py-2 px-4 border-b align-top">
                <div class="flex flex-col items-center">
                  <div class="profile-avatar mb-2" style="width:48px;height:48px;border-radius:50%;background:#3b82f6;color:#fff;display:flex;align-items:center;justify-content:center;font-size:1.4rem;font-weight:bold;">
                    <%= appointment.patient.name ? appointment.patient.name.charAt(0).toUpperCase() : '?' %>
                  </div>
                  <div class="w-full text-center">
                    <span class="block font-bold text-gray-800 text-base mb-1"><%= appointment.patient.name %></span>
                  </div>
                </div>
              </td>
              <td class="py-2 px-4 border-b align-top">
                <div class="flex flex-col items-center">
                  <span class="block text-gray-700"><%= new Date(appointment.date).toLocaleDateString('ar-EG') %></span>
                </div>
              </td>
              <td class="py-2 px-4 border-b align-top">
                <div class="flex flex-col items-center">
                  <span class="block text-gray-700 whitespace-pre-line"><%= appointment.diagnosis ? appointment.diagnosis : '-' %></span>
                </div>
              </td>
              <td class="py-2 px-4 border-b align-top">
                <div class="flex flex-col items-center">
                  <span class="block text-gray-700 whitespace-pre-line"><%= appointment.prescription ? appointment.prescription : '-' %></span>
                </div>
              </td>
              <td class="py-2 px-4 border-b align-top">
                <div class="flex flex-col items-center">
                  <span class="block text-gray-700 whitespace-pre-line"><%= appointment.nutrition ? appointment.nutrition : '-' %></span>
                </div>
              </td>
              <td class="py-2 px-4 border-b align-top">
                <div class="flex flex-col items-center">
                  <span class="block text-gray-700 whitespace-pre-line"><%= appointment.notes ? appointment.notes : '-' %></span>
                </div>
              </td>
              <td class="py-2 px-4 border-b align-top">
                <div class="flex flex-col items-center">
                  <span class="block text-gray-700"><%= appointment.followUp && appointment.followUp.days ? appointment.followUp.days + ' يوم' : '-' %></span>
                </div>
              </td>
              <td class="py-2 px-4 border-b align-top">
                <div class="flex flex-col items-center">
                  <button 
                    class="bg-blue-500 hover:bg-blue-700 text-white px-3 py-1 rounded mb-1"
                    onclick="openMedicalModal(
                      '<%= appointment._id %>',
                      '<%= appointment.diagnosis ? appointment.diagnosis.replace(/'/g, '\\\'') : '' %>',
                      '<%= appointment.prescription ? appointment.prescription.replace(/'/g, '\\\'') : '' %>',
                      '<%= appointment.nutrition ? appointment.nutrition.replace(/'/g, '\\\'') : '' %>',
                      '<%= appointment.notes ? appointment.notes.replace(/'/g, '\\\'') : '' %>',
                      '<%= appointment.followUp && appointment.followUp.days ? appointment.followUp.days : '' %>'
                    )"
                  >
                   تحديث
                  </button>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mt-4">
        <%= error %>
      </div>
    <% } %>
  </div>

  <!-- نافذة منبثقة لإدخال السجل الطبي -->
  <div id="medicalModal" class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md relative">
      <button onclick="closeMedicalModal()" class="absolute left-2 top-2 text-gray-500 hover:text-red-600 text-xl">&times;</button>
      <form id="medicalForm" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="mb-4">
          <label class="block mb-1 font-bold">التشخيص</label>
          <textarea name="diagnosis" id="diagnosisInput" class="w-full border rounded p-2" required></textarea>
        </div>
        <div class="mb-4">
          <label class="block mb-1 font-bold">الوصفة</label>
          <textarea name="prescription" id="prescriptionInput" class="w-full border rounded p-2" required></textarea>
        </div>
        <div class="mb-4">
          <label class="block mb-1 font-bold">التوصيات الغذائية</label>
          <textarea name="nutrition" id="nutritionInput" class="w-full border rounded p-2"></textarea>
        </div>
        <div class="mb-4">
          <label class="block mb-1 font-bold">الملاحظات</label>
          <textarea name="notes" id="notesInput" class="w-full border rounded p-2"></textarea>
        </div>
        <div class="mb-4">
          <label class="block mb-1 font-bold">مدة المراجعة</label>
          <select name="followUpDays" id="followUpDaysInput" class="w-full border rounded p-2" required>
            <option value="">اختر مدة المراجعة</option>
            <option value="7">7 أيام</option>
            <option value="14">14 يوم</option>
            <option value="30">30 يوم</option>
          </select>
        </div>
        <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">حفظ</button>
      </form>
    </div>
  </div>

  <script>
    let currentAppointmentId = null;
    function openMedicalModal(appointmentId, diagnosis, prescription, nutrition, notes, followUpDays) {
      currentAppointmentId = appointmentId;
      document.getElementById('diagnosisInput').value = diagnosis || '';
      document.getElementById('prescriptionInput').value = prescription || '';
      document.getElementById('nutritionInput').value = nutrition || '';
      document.getElementById('notesInput').value = notes || '';
      document.getElementById('followUpDaysInput').value = followUpDays || '';
      document.getElementById('medicalForm').action = '/doctor/medical-record/' + appointmentId;
      document.getElementById('medicalModal').classList.remove('hidden');
    }
    function closeMedicalModal() {
      document.getElementById('medicalModal').classList.add('hidden');
    }
  </script>
</body>
</html>
<%- include('footerdoc') %>